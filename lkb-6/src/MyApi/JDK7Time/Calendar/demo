package com.lkbhua.MyApi.JDK7Time.Calendar;

import java.util.Date;
import java.util.Calendar;

public class demo {
    public static void main(String[] args) {
        // 1、获取日历对象
        // 细节：
        // Canlendar类是一个抽象类，不能创建对象，而是通过静态方法获取到子类对象
        // 底层原理：
        // 会根据系统的不同时区来获取不同的日历对象
        // 会把时间中的纪元、年、月、日、时、分、秒、毫秒、时区、星期等信息封装到一个Calendar对象中
        Calendar c = Calendar.getInstance();
        System.out.println(c);

        // 2、修改一下日历代表的时间
        // case1：根据Date对象进行修改
        // public final setTime(Date date) 给日历设置日期对象
        // 细节2：
        // 月份：范围是0-11 如果获取出来的是0，实际上是1月。
        // 星期：在国外的星期日是一周的第一天
        Date d = new Date(0L);
        c.setTime(d);
        System.out.println(c);


        // public void set(int field, int value) 修改日历的某一个字段信息
        c.set(Calendar.YEAR,2000);

        // public void add(int field, int amount) 为某个字段增加/减少指定的值
        c.add(Calendar.MONTH,1);

        // public int get(int field) 取日期的某个字段信息
        // 数组： 0: 纪元 1: 年 2: 月 3: 一年中的第几周 4: 一个月中的第几周 5: 一个月的第几天
        // 自动生成快捷键：ctrl+alt+v
        int year = c.get(1);
        System.out.println(year);
        int month = c.get(2)+1;
        System.out.println(month);
        int day = c.get(5);
        System.out.println(day);

        int week = c.get(Calendar.DAY_OF_WEEK);
        System.out.println(getWeek(week));
    }
    public static String getWeek(int index){
        String[] arr = {"星期日","星期一","星期二","星期三","星期四","星期五","星期六"};
        return arr[index];
    }
}
