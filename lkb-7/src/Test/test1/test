package com.lkbhua.Test.test1;

import java.util.Arrays;
import java.util.Comparator;

public class test {
    public static void main(String[] args) {
        /*定义一个数组存储一些女朋友的对象，利用Arrays中的sort方法进行排序
          要求1：属性有姓名、年龄、身高
          要求2：按照年龄的大小进行排序，年龄一样，按照身高进行排序，身高一样，则按照姓名的字母进行排序
           （姓名中不要有中文和特殊符号）*/

        // 1、创建三个女生朋友的对象
        GirlFriend gf1 = new GirlFriend("xiaohua", 18, 170);
        GirlFriend gf2 = new GirlFriend("xiaoqiong", 19, 160);
        GirlFriend gf3 = new GirlFriend("xiaozeng", 24, 158);
        GirlFriend gf4 = new GirlFriend("xiaoliu", 18, 170);

        // 2、创建一个数组，将三个对象放入数组中
        GirlFriend[] gfs = new GirlFriend[]{gf1, gf2, gf3, gf4};
        System.out.println("排序前的数组：");
        for (int i = 0; i < gfs.length; i++){
            System.out.println(gfs[i].getName() + " " + gfs[i].getAge() + " " + gfs[i].getHigh());
        }

        // 3、利用Arrays中的sort方法进行排序
        method1(gfs);

        // 利用Lambda表达式进行排序
        // () -> {}
        // (): 对应着抽象方法的形参
        // {}： 对应着抽象方法的方法体
        Arrays.sort(gfs, (o1, o2) -> {
            double temp = o1.getAge() - o2.getAge();
            temp = temp == 0 ? o1.getHigh() - o2.getHigh() : temp;
            temp = temp == 0 ? o1.getName().compareTo(o2.getName()) : temp;
            if(temp > 0){
                return 1;
            }
            else if(temp < 0){
                return -1;
            }else{
                return 0;
            }
        });


        // 4、输出排序后的数组
        System.out.println("排序后的数组：");
        for (int i = 0; i < gfs.length; i++){
            System.out.println(gfs[i].getName() + " " + gfs[i].getAge() + " " + gfs[i].getHigh());
        }

    }
    public static void method1(GirlFriend[] gfs){
        Arrays.sort(gfs, new Comparator<GirlFriend>() {
            @Override
            public int compare(GirlFriend o1, GirlFriend o2) {
                double temp = o1.getAge() - o2.getAge();
                temp = temp == 0 ? o1.getHigh() - o2.getHigh() : temp;
                temp = temp == 0 ? o1.getName().compareTo(o2.getName()) : temp;
                if(temp > 0){
                    return 1;
                }
                else if(temp < 0){
                    return -1;
                }else{
                    return 0;
                }
            }
        });
    }
}
