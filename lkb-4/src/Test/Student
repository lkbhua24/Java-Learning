package com.lkbhua.Test;

public class Student {
    // 1、私有化成员变量
    private String name;
    private int age;

    // 2、空参构造
    public Student(){}

    // 3、有参构造
    public Student(String name,int age){
        this.name = name;
        this.age = age;
    }

    // 4、提供对应的getter和setter方法
    public String getName(){
        return name;
    }
    public void setName(String name){
        this.name = name;
    }
    public int getAge(){
        return age;
    }
    public void setAge(int age){
        this.age = age;
    }
}
