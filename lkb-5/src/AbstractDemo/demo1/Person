package com.lkbhua.AbstractDemo.demo1;

public abstract class Person {

    private String name;
    private int age;

    // 4、抽象类中可以有构造方法
    // 疑问：既然有抽象方法的类不能创建对象，有这个构造方法有什么用呢？
    public Person() {}

    public Person(String name, int age) {
        this.name = name;
        this.age = age;
    }

    public String getName() {
        return name;
    }
    public void setName(String name) {
        this.name = name;
    }

    public int getAge() {
        return age;
    }
    public void setAge(int age) {
        this.age = age;
    }


    // 3、有抽象方法的类一定是抽象类
    public abstract void work();

    // 2、抽象类中不一定有抽象方法，
    public void working() {
        System.out.println("work");
    }



}
