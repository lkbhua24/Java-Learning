package com.lkbhua.polymorphism.Demo1;

public class Test {
    public static void main(String[] args) {
        // 1、创建三个对象，并调用register方法
        Student s = new Student();
        s.setName("lkbhua");
        s.setAge(18);

        Teacher t = new Teacher();
        t.setName("James");
        t.setAge(38);

        Administrator a = new Administrator();
        a.setName("Jim");
        a.setAge(28);

        register(s);
        register(t);
        register(a);

    }

    // 这个方法既能接受Student, Teacher, Administrator
    // 只能把参数写成这三个类型的父类
    public static void register(Person p) {
        p.show();
    }
}
