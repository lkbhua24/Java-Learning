package com.lkbhua.InnerClassDemo.demo3;

public class Outer {

    int b = 20;
    public void show(){
        final int a = 10;

        // 局部内部类
         class Inner{
            String name;
            int age;
             public void show(){
                System.out.println("Inner show()");
                System.out.println("a:"+a);
                System.out.println("b:"+b);
            }
            public void method(){
                System.out.println("局部内部类中的method方法");
            }
        }

         Inner inner = new Inner();
         inner.show();
         inner.method();
    }
}
